<section>
  <div class="topSide">
    <h1><%= title %></h1>
    <a href="/catalog/model/create"
      ><button class="createBtn">
        <i class="fa-solid fa-folder-plus"></i> Add new model
      </button></a
    >
  </div>
  <div class="modelsContainer">
    <% for(let elem of model_list) {%>
    <div class="modelCard">
      <div class="imageContainer">
        <img src="<%= elem.picture %> " alt="<%= elem.name %> " />
      </div>
      <div class="contentContainer">
        <a href="<%= elem.url %> "
          ><h3><%= elem.name %> <span><%= elem.category.name %> </span></h3></a
        >

        <div class="modelListDetailsWrapper">
          <div>Scale: <%= elem.scale %></div>
          <div>Price: <%= elem.price %> RON</div>
          <% if(elem.status==="Available"){ %>
          <div class="statusAvailable"><%=elem.status %></div>
          <% }else{ %>
          <div class="statusSold"><%=elem.status %></div>
          <% } %>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</section>
