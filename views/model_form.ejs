<section>
  <h1><%=title %></h1>

  <form action="" method="POST" enctype="multipart/form-data">
    <div class="formWrapper">
      <div class="formElemWrapper">
        <label for="name">Model Name</label>
        <input
          required
          type="text"
          id="name"
          name="name"
          value="<%= typeof model == 'undefined' ? '':model.name %> "
        />
      </div>
      <div class="formElemWrapper">
        <label for="scale">Model Scale</label>
        <input
          required
          type="text"
          id="scale"
          name="scale"
          value="<%= typeof model == 'undefined' ? '':model.scale %> "
        />
      </div>
      <div class="formElemWrapper">
        <label for="price">Model Price</label>
        <input
          required
          type="number"
          id="price"
          name="price"
          value="<%= typeof model == 'undefined' ? '':model.price %> "
          min="5"
          max="10000"
        />
        <span>RON</span>
      </div>
      <div class="formElemWrapper">
        <label for="category">Model Category</label>
        <select name="category" id="category" required>
          <% categories.forEach(category=> {%> 
          <% if(typeof model != 'undefined') {%> 
          <% var selected = category._id.toString() === model.category._id.toString() ? 'selected': ''%>
          <option value="<%= category._id %> " <%="selected" %>><%= category.name %></option>
          <% }else{ %>
          <option value="<%= category._id %> "><%= category.name %></option>
          <% } %> 
          <% }) %>
        </select>
      </div>
      <div class="formElemWrapper">
        <label for="picture">Select a image for the model</label>
        <input type="file" name="picture" id="picture" />
      </div>

      <div class="btnWrapper">
        <button class="classicBtn" type="submit">Submit</button>
        <a href="/catalog/models"
          ><button class="classicBtn" type="button">Cancel</button></a
        >
      </div>
    </div>
  </form>
</section>
