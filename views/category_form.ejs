<section>
  <h1><%= title %></h1>

  <% if(typeof category != 'undefined' && category.picture && category.picture
  != 'undefined' ){ %>

  <div>
    <img src="<%= category.picture %> " alt="<%= category.picture %> " />
  </div>
  <% } %>

  <form action="" method="POST" enctype="multipart/form-data">
    <div class="formWrapper">
      <div class="formElemWrapper">
        <label for="name">Category</label>
        <input
          required
          type="text"
          id="name"
          name="name"
          value="<%= typeof category == 'undefined' ? '':category.name %> "
        />
      </div>
      <div class="formElemWrapper">
        <label for="description">Description</label>
        <textarea
          name="description"
          id="description"
          cols="30"
          rows="10"
          required>
<%= typeof category == 'undefined'? '':category.description %> </textarea>
      </div>
      <div class="formElemWrapper">
        <label for="picture">Select a cover image</label>
        <input type="file" name="picture" id="picture" />
      </div>
      <div class="btnWrapper">
        <button class="classicBtn" type="submit">Submit</button>
        <a href="/catalog/categories"
          ><button class="classicBtn" type="button">Cancel</button></a>
      </div>
    </div>
  </form>

  <% if(typeof errors !='undefined'){ %>
  <ul>
    <% errors.forEach(err=>{%>
    <li><%=err.msg %></li>
    <% }) %>
  </ul>
  <% } %>
</section>
